    <!-- APP ARRAYS COLORS DEFINITIONS -->

    <!-- Array of all the primaryDark colors -->
    <array name="primaryDark_colors">
        <item>@color/topStoriesPrimaryDark</item>
        <item>@color/mostPopularPrimaryDark</item>
        <item>@color/businessPrimaryDark</item>
        <item>@color/sportsPrimaryDark</item>
        <item>@color/searchPrimaryDark</item>
        <item>@color/dialogPrimaryDark</item>
    </array>

    <!-- Array of all the primary colors -->
    <array name="everRead_colors">
        <item>@color/topStoriesEverRead</item>
        <item>@color/mostPopularEverRead</item>
        <item>@color/businessEverRead</item>
        <item>@color/sportsEverRead</item>
        <item>@color/searchEverRead</item>
        <item>@color/notificationsEverRead</item>
    </array>

    <!-- Array of all the everRead colors -->
    <array name="primary_colors">
        <item>@color/topStoriesPrimary</item>
        <item>@color/mostPopularPrimary</item>
        <item>@color/businessPrimary</item>
        <item>@color/sportsPrimary</item>
