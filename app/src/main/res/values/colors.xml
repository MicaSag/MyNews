    <color name="searchEverRead">#F1F8E9</color>
    <color name="searchAccent">#8bc34a</color>
    <color name="searchText">@android:color/black</color>

    <!-- colors that will be used by notifications -->
    <color name="notificationsPrimaryDark">#F57C00</color>
    <color name="notificationsPrimary">#FF9800</color>
    <color name="notificationsEverRead">#FFF3E0</color>
    <color name="notificationAccent">#FF9800</color>
