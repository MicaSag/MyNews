    <color name="mostPopularEverRead">#E0F7FA</color>
    <color name="mostPopularAccent">#f50057</color>
    <color name="mostPopularText">@android:color/black</color>

    <!-- colors that will be used by Business -->
    <color name="businessPrimaryDark">#00796b</color>
    <color name="businessPrimary">#009688</color>
    <color name="businessEverRead">#E0F2F1</color>
    <color name="businessAccent">#d500f9</color>
