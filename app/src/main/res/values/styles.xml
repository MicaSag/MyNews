<resources>

    <!-- ===== THEMES ===== -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ===== STYLES ===== -->

    <!-- tabLayout style. -->
    <style name="tabLayout_style" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">#D4E0F8</item>
        <item name="tabSelectedTextColor">#fff</item>
        <item name="tabIndicatorColor">@color/topStoriesBackground</item>
        <item name="android:background">@color/topStoriesBackground</item>
    </style>

    <!-- toolBar style. -->
    <style name="toolBar_style" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="tabTextColor">#D4E0F8</item>
        <item name="tabSelectedTextColor">#fff</item>
        <item name="android:background">@color/topStoriesBackground</item>
    </style>

</resources>
